{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}

	<div class="media container">
		<div class="text-center m-5">
			<img class="align-self-start mr-3 w-25" src="{{program.poster}}" alt="{{ program.title }} poster">
		</div>
		<div class="media-body">
			<h1 class="mt-0 text-center">{{ program.title }}</h1>
			<p>{{ program.summary }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
			{% for season in seasons %}
				<ul>
					<a href="{{ path('program_season_show', {program: program.id, season: season.id}) }}">
						Saison
						{{ season.getNumber}}
					</a>
				</ul>
			{% endfor %}
			<strong>Acteurs :</strong>
			<ul>
			{% for actor in program.actors %}
				<li>{{ actor.name }} </li>
			{% else %}
				<li>Aucun acteur pour cette série</li>
			{% endfor %}
			</ul>
			<br/><br/><br/><br/><br/>
		</div>

	<a href="{{ path('program_index') }}">
		Retour à la liste des séries
	</a>
</div>{% endblock %}
