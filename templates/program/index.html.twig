{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1 class="m-5">Les séries : </h1>
    {% for program in programs %}
        <div class="container">
            <h3>{{ loop.index }} : {{ program.title }} </h3>
            <p class="text-end">Catégorie : {{ program.category.name }}</p>
            <p class= "text-center">{{ program.summary }}</p>
            </br>
			<a href="{{ path("program_show", {id: program.id}) }}">Voir la fiche</a>
            </br>
            </br>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('program_new') }}">
	Ajouter une série
	</a>
	</br>
    <a href="{{ path('app_index') }}">
    Retour à l'accueil
    </a>
    
{% endblock %}